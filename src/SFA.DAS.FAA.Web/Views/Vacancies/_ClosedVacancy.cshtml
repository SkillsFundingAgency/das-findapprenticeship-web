@using SFA.DAS.FAA.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.FAA.Web.Models.Vacancy.VacancyDetailsViewModel
@{
    ViewBag.Title = "You can no longer apply for this apprenticeship – Find an apprenticeship – GOV.UK";
}
@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.SearchResults">Back</a>
}
<div class="govuk-grid-row">
<div class="govuk-grid-column-two-thirds">
    <div itemscope itemtype="https://schema.org/JobPosting" class="faa-vacancy-content">
        <h1 class="govuk-heading-l faa-vacancy__title govuk-!-margin-bottom-9"><span itemprop="title">You can no longer apply for this apprenticeship</span></h1>
        <h3 class="govuk-heading-m">@Model.Title</h3>
        <p class="govuk-body-l faa-vacancy__organisation"><span itemprop="hiringOrganization">@Model.EmployerName</span></p>
        <p class="govuk-body-l faa-vacancy__location">
            <span itemprop="jobLocation">
                @Model.WorkLocation.AddressLine3, @Model.WorkLocation.Postcode
            </span>
        </p>
        <p class="govuk-body govuk-!-margin-bottom-6 faa-vacancy__closing-date">@Model.ClosedDate</p>
    
        <p class="govuk-body">
            <a href="@Url.RouteUrl(RouteNames.ServiceStartDefault)" class="govuk-link govuk-link--no-visited-state">Find more apprenticeships</a>    
        </p>
    
    </div>
</div>
</div>