@using SFA.DAS.FAA.Web.Infrastructure
@model SFA.DAS.FAA.Web.Models.BrowseByInterestViewModel

@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.ServiceStartDefault">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial model="@ViewData.ModelState" name="_ValidationSummary" />
        <form class="form" method="post">
            <div class="govuk-form-group @(ViewData.ModelState.ErrorCount > 0 ? "govuk-form-group--error" : "")">
                <span class="govuk-caption-l">Question 1 of 2</span>
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                        <h1 class="govuk-heading-l govuk-!-margin-bottom-2" id="SelectedRouteIds">Browse by your interests</h1>
                    </legend>
                    @if (ViewData.ModelState.ErrorCount > 0)
                    {
                        <span class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span>
                            @ViewData.ModelState.Values.First().Errors.First().ErrorMessage
                        </span>
                    }
                    <p class="govuk-hint">Select all the job categories that interest you.</p>
                    <div class="govuk-checkboxes" data-module="govuk-checkboxes">
                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Agriculture, environment
                                and animal care</legend>
                            <partial model="@Model.AgricultureEnvironmentalAndAnimalCareDictionary"
                                name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Business, sales and legal
                            </legend>
                            <partial model="@Model.BusinessSalesAndLegalDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Care, health and science
                            </legend>
                            <partial model="@Model.CareHealthAndScienceDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Catering and hospitality
                            </legend>
                            <partial model="@Model.CateringAndHospitalityDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Construction, engineering
                                and buildings</legend>
                            <partial model="@Model.ConstructionEngineeringAndBuildingsDictionary"
                                name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Creative and design
                            </legend>
                            <partial model="@Model.CreativeAndDesignDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Digital</legend>
                            <partial model="@Model.DigitalDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Education and early years
                            </legend>
                            <partial model="@Model.EducationAndEarlyYearsDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Protective services
                                (emergency and uniformed services)</legend>
                            <partial model="@Model.ProtectiveServicesDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>

                        <fieldset class="govuk-fieldset">
                            <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">Transport and logistics
                            </legend>
                            <partial model="@Model.TransportAndLogisticsDictionary" name="_BrowseByInterestsPartial" />
                        </fieldset>
                    </div>
                </fieldset>
            </div>
            <button class="govuk-button" data-module="govuk-button">Continue</button>
        </form>
    </div>
</div>
