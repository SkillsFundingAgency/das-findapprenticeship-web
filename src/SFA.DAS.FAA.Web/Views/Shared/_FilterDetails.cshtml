@model SFA.DAS.FAA.Web.Models.SearchResults.ChecklistDetails
@{
    var counter = 0;
}
<div class="govuk-form-group">
    <fieldset class="govuk-fieldset">
        <legend>
            <div class="govuk-checkboxes govuk-checkboxes--small">
                @foreach (var lookup in Model.Lookups)
                {
                    <div class="govuk-checkboxes__item">
                        <input class="govuk-checkboxes__input" id="@Model.QueryStringParameterName-@counter"
                            name="@Model.QueryStringParameterName" type="checkbox" value="@lookup.Value" @lookup.Checked>
                        <label class="govuk-label govuk-checkboxes__label faa-filter__checkbox-label"
                            for="@Model.QueryStringParameterName-@counter">
                            @lookup.Name
                        </label>
                        @if (!string.IsNullOrEmpty(lookup.Hint))
                        {
                            <div id="level-item-hint" class="govuk-hint govuk-checkboxes__hint">
                                @lookup.Hint
                            </div>
                        }
                    </div>
                    counter++;
                }
            </div>
        </legend>
    </fieldset>
</div>