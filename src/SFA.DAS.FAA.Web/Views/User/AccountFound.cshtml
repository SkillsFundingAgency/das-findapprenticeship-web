@model SFA.DAS.FAA.Web.Models.User.AccountFoundInformViewModel;
@using SFA.DAS.FAA.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Hello – Find an apprenticeship – GOV.UK";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-notification-banner govuk-notification-banner--success" role="alert"
             aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Success
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <h3 class="govuk-notification-banner__heading">
                    You now use a GOV.UK One Login to sign in to Find an apprenticeship.
                </h3>
            </div>
        </div>
        <h1 class="govuk-heading-l">Hello @Model.FirstName</h1>
        <p class="govuk-body">We’ve changed Find an apprenticeship to make it easier to use.</p>
        <p class="govuk-body">You need to confirm a few basic details before you can use the new service.</p>
        <div class="govuk-inset-text">
            Your applications and saved vacancies will be in your account after you’ve completed these steps.
        </div>
        <a
            asp-route="@RouteNames.AccountFoundTermsAndConditions"
            class="govuk-button"
            role="button">
            Continue
        </a>
    </div>
</div>