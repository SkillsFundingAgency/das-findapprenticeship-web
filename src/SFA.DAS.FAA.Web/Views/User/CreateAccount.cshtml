@model SFA.DAS.FAA.Web.Models.User.InformViewModel;
@using SFA.DAS.FAA.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Create an account – Find an apprenticeship – GOV.UK";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">        
        
        @if (Model.ShowAccountRecoveryBanner)
        {
            <div class="govuk-notification-banner" role="region" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
                <div class="govuk-notification-banner__header">
                    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                        Important
                    </h2>
                </div>
                <div class="govuk-notification-banner__content">
                    <p class="govuk-notification-banner__heading">
                        We’ve introduced a new version of Find an apprenticeship. If you had an account before 31 July 2024, you can
                        <a class="govuk-notification-banner__link" href="@Url.RouteUrl(RouteNames.TransferYourData)">transfer your data</a>.
                    </p>
                </div>
            </div>
        }

        <h1 class="govuk-heading-l">Create an account for Find an apprenticeship</h1>
        <p class="govuk-body">
            We need to ask you some questions to create your account.
        </p>
        <p class="govuk-body">
            By continuing, you confirm that you agree with our: 
        </p>
        <ul class="govuk-list govuk-list--bullet govuk-!-margin-bottom-6">
            <li><a href="#" class="govuk-link govuk-link--no-visited-state">terms and conditions (opens in new tab)</a>
                - how we run this service</li>
            <li><a href="#" class="govuk-link govuk-link--no-visited-state">privacy policy (opens in new tab)</a> - how
                we use your data</li>
        </ul>
        <a asp-route="@RouteNames.UserName" class="govuk-button" role="button">Continue</a>
    </div>
</div>