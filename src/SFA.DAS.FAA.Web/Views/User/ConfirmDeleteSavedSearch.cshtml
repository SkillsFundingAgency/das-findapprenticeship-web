@using SFA.DAS.FAA.Web.Infrastructure

@model SFA.DAS.FAA.Web.Models.User.SavedSearchViewModel

@{
    ViewData["Title"] = "Do you want to delete this search alert? – Find an apprenticeship – GOV.UK";
}

@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.SavedSearches">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl">Do you want to delete this search alert?</h1>
        <p class="govuk-body">
            We'll stop emailing you with new apprenticeships that match this search.
        </p>
        <partial name="_SavedSearch" model="@Model"></partial>
        <form method="post" asp-route="@RouteNames.DeleteSavedSearch" asp-route-savedSearchId="@Model.Id">
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button govuk-button--warning">Delete
                    <span class="govuk-visually-hidden">
                        @Model.Title
                        search alert</span></button>
                <a asp-route="@RouteNames.SavedSearches" class="govuk-link govuk-link--no-visited-state">Cancel - don't
                    delete</a>
            </div>
        </form>
    </div>
</div>
