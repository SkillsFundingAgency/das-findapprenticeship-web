@using SFA.DAS.FAA.Web.Infrastructure

@model SFA.DAS.FAA.Web.Models.User.SavedSearchViewModel

@{
    ViewData["Title"] = "Do you want to delete this search alert? – Find an apprenticeship – GOV.UK";
}

@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.SavedSearches">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-xl faa-page-heading">Do you want to delete this search alert?</h1>
        
        <div>
            <p class="govuk-body">
                We’ll stop emailing you with new apprenticeships that match this search.
            </p>
        </div>
        
        <partial name="_SavedSearch" model="@Model"></partial>

        <form method="post" asp-route="@RouteNames.DeleteSavedSearch"
              asp-route-savedSearchId="@Model.Id">
            <button type="submit" class="das-button--inline-link">Delete
                <span class="govuk-visually-hidden">
                    @Model.Title
                    search alert</span></button>
        </form>

        <a asp-route="@RouteNames.SavedSearches" class="govuk-link govuk-link--no-visited-state">Cancel - don't delete</a>
    </div>
</div>
