@model SFA.DAS.FAA.Web.Models.User.ChangeNotificationPreferencesViewModel
@using SFA.DAS.FAA.Web.Infrastructure
@{
    ViewData["Title"] = "Change if you get reminders about your unfinished applications – Find an apprenticeship – GOV.UK";
}
@section BackLink {
    <a class="govuk-back-link" asp-route="@Model.BackLink">Back</a>
}
<partial name="_ValidationSummary" />
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Get reminders about your unfinished applications</h1>
        <p class="govuk-body">We can email you about applications you have not finished yet and remind you to apply.</p>
        <p class="govuk-body">We’ll remind you when there’s:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>a week to go</li>
            <li>2 days to go</li>
        </ul>
        <p class="govuk-body">You can unsubscribe from these reminders at any time in your settings.</p>
        <div class="govuk-inset-text">
            No matter what you select, you’ll still get emails when companies tell us if your application has been successful or unsuccessful.
        </div>
        <form class="form" method="post">
            <div class="govuk-form-group" das-highlight-error-for="IsRemindersOpt" error-class="govuk-form-group--error">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h1 class="govuk-fieldset__heading">
                            Do you want to get reminders about unfinished applications?
                        </h1>
                    </legend>
                    <span das-validation-for="IsRemindersOpt" class="govuk-error-message"></span>
                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="IsRemindersOpt" name="IsRemindersOpt" type="radio" value="true">
                            <label class="govuk-label govuk-radios__label" for="IsRemindersOpt">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" id="IsRemindersOpt-2" name="IsRemindersOpt" type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="IsRemindersOpt-2">
                                No
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-button-group" href="account-details.html">
                <button class="govuk-button" data-module="govuk-button">
                    Save
                </button>
            </div>
        </form>
    </div>
</div>