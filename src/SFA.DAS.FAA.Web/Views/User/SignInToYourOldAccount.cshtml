@model SFA.DAS.FAA.Web.Models.User.SignInToYourOldAccountViewModel;
@using SFA.DAS.FAA.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sign in to your old Find an apprenticeship account – Find an apprenticeship – GOV.UK";
}

@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.TransferYourData">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <span class="govuk-caption-l">Transfer your data</span>
        <h1 class="govuk-heading-l">Sign in to your old Find an apprenticeship account</h1>
        <p class="govuk-body">
            Enter the email address and password you used before 17 July 2024. This is not your GOV.UK One Login.
        </p>

        <details class="govuk-details">
            <summary class="govuk-details__summary">
                <span class="govuk-details__summary-text">
                    I don’t know my old account details
                </span>
            </summary>
            <div class="govuk-details__text">
                <p class="govuk-body">You’ll need to contact us for help.</p>
                <p class="govuk-body govuk-!-margin-bottom-0">Telephone: 08000 150 400</p>
                <p class="govuk-body">Available Monday to Friday, 8am to 8pm</p>
                <a href="https://www.gov.uk/call-charges" class="govuk-link">Find out more about call charges</a>
            </div>
        </details>

        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="das-highlight">
                    <h2 class="govuk-heading-m govuk-!-padding-bottom-3">Your old account details</h2>
                    <form class="form" method="post">
                        <div class="govuk-form-group" das-highlight-error-for="Email">
                            <label class="govuk-label govuk-label--s" for="Email">
                                Email address
                            </label>
                            <span das-validation-for="Email" class="govuk-error-message"></span>
                            <input class="govuk-input govuk-input--width-20" asp-for="Email" type="text">
                            <div style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
                        </div>
                        <div class="govuk-form-group" das-highlight-error-for="Password">
                            <label class="govuk-label govuk-label--s" for="Password">
                                Password
                            </label>
                            <span das-validation-for="Password" class="govuk-error-message"></span>
                            <input class="govuk-input govuk-input--width-20" asp-for="Password" type="password">
                            <div style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
                        </div>
                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button" data-module="govuk-button">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>



    </div>
</div>