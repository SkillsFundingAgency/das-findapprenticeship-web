@model SFA.DAS.FAA.Web.Models.User.SignInToYourOldAccountViewModel;
@using SFA.DAS.FAA.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Sign in to your old Find an apprenticeship account – Find an apprenticeship – GOV.UK";
}

@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.TransferYourData">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Transfer your data</span>
        <h1 class="govuk-heading-l">Sign in to your old Find an apprenticeship account</h1>
        <p class="govuk-body">
            Enter the email address and password you used before 31 July 2024. This is not your GOV.UK One Login.
        </p>
       
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <div class="das-highlight">
                    <h2 class="govuk-heading-m govuk-!-padding-bottom-3">Your old account details</h2>
                    <form class="form" method="post">
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-label--s" for="width-20">
                            Email address
                        </label>
                        <input class="govuk-input govuk-input--width-20" asp-for="Email" type="text">
                        <div style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label govuk-label--s" for="width-20">
                            Password
                        </label>
                        <input class="govuk-input govuk-input--width-20" asp-for="Password" type="password">
                        <div style="position: relative !important; height: 0px !important; width: 0px !important; float: left !important;"></div>
                    </div>
                        <div class="govuk-button-group">
                            <button type="submit" class="govuk-button" data-module="govuk-button">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>


        
    </div>
</div>