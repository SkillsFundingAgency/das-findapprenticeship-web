@using SFA.DAS.FAA.Web.Infrastructure
@model SFA.DAS.FAA.Web.Models.User.DateOfBirthViewModel
@{
    ViewBag.Title = "What is your date of birth? – Find an apprenticeship – GOV.UK";
}
@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.CreateAccount">Back</a>
}

@{
    var isError = ViewData.ModelState[nameof(Model.Day)]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid || ViewData.ModelState[nameof(Model.Month)]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid || ViewData.ModelState[nameof(Model.Year)]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid;
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial model="@ViewData.ModelState" name="_ValidationSummary" />
        <span class="govuk-caption-l">Create an account</span>
        <form class="form" method="post">
            <fieldset class="govuk-fieldset" role="group" aria-describedby="date-of-birth-hint">
                <legend class="govuk-fieldset__legend govuk-fieldset__legend--l">
                    <h1 class="govuk-fieldset__heading">
                        What is your date of birth?
                    </h1>
                </legend>
                <div class="govuk-inset-text">
                    <p class="govuk-body">We don't share your date of birth when you apply for an apprenticeship.</p>
                </div>
                <p class="govuk-body">We only use your age to make our services work. For example, to show you the correct National Minimum Wage rate for your age.</p>
                <div class="govuk-form-group  @(isError ? "govuk-form-group--error" : "")">
                    <div id="date-of-birth-hint" class="govuk-hint">
                    For example, 31 03 1980
                    </div>
                    <span asp-validation-for="Day" class="govuk-error-message"></span>
                    <span asp-validation-for="Month" class="govuk-error-message"></span>
                    <span asp-validation-for="Year" class="govuk-error-message"></span>
                    <div class="govuk-date-input" id="date-of-birth">
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" for="Day">
                                Day
                                </label>
                                <input class="govuk-input govuk-date-input__input govuk-input--width-2 
                                @((ViewData.ModelState[nameof(Model.Day)]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)  ? "govuk-input--error" : "")
                                " type="text" asp-for="Day" inputmode="numeric" />
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" for="Month">
                                Month
                                </label>
                                <input class="govuk-input govuk-date-input__input govuk-input--width-2 
                                @((ViewData.ModelState[nameof(Model.Month)]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)  ? "govuk-input--error" : "")
                                " asp-for="Month" type="text" inputmode="numeric" />
                            </div>
                        </div>
                        <div class="govuk-date-input__item">
                            <div class="govuk-form-group">
                                <label class="govuk-label govuk-date-input__label" for="Year">
                                Year
                                </label>
                                <input class="govuk-input govuk-date-input__input govuk-input--width-4
                                @((ViewData.ModelState[nameof(Model.Year)]?.ValidationState == Microsoft.AspNetCore.Mvc.ModelBinding.ModelValidationState.Invalid)  ? "govuk-input--error" : "")
                                " asp-for="Year" type="text" inputmode="numeric" />
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
            <button class="govuk-button" data-module="govuk-button">
                Continue
            </button>
        </form>
    </div>
</div>