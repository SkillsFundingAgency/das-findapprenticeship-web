@model SFA.DAS.FAA.Web.Models.User.NameViewModel
@{
    ViewData["Title"] = Model.PageTitle;
}
@section BackLink {
    <a class="govuk-back-link" asp-route="@Model.BackLink">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <partial name="_ValidationSummary" />
        <span class="govuk-caption-l">
            @Model.PageCaption
        </span>
        <h1 class="govuk-heading-l">
            @Model.PageHeading
        </h1>
        <p class="govuk-body">Write your name as you want it to appear on your applications</p>
        <form class="form" method="post">
            <input type="hidden" asp-for="JourneyPath" />
            <input type="hidden" asp-for="BackLink" />
            <div class="govuk-form-group" das-highlight-error-for="FirstName" error-class="govuk-form-group--error">
                <label class="govuk-label" asp-for="FirstName">
                    First name
                </label>
                <span das-validation-for="FirstName" class="govuk-error-message"></span>
                <input asp-for="FirstName" class="govuk-input govuk-!-width-two-thirds"/>
            </div>
            <div class="govuk-form-group" das-highlight-error-for="LastName" error-class="govuk-form-group--error">
                <label class="govuk-label" asp-for="LastName">
                    Last name
                </label>
                <span das-validation-for="LastName" class="govuk-error-message"></span>
                <input asp-for="LastName" class="govuk-input govuk-!-width-two-thirds"/>
            </div>
            <div class="govuk-button-group">
                <button class="govuk-button" data-module="govuk-button">
                    @Model.PageCtaButtonLabel
                </button>
            </div>
        </form>
    </div>
</div>