@using Microsoft.AspNetCore.Mvc.TagHelpers
@using SFA.DAS.FAA.Web.Infrastructure
@{
    ViewData["Title"] = "Finish creating your account – Find an apprenticeship – GOV.UK";
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <div class="govuk-notification-banner govuk-notification-banner--success" role="alert" aria-labelledby="govuk-notification-banner-title" data-module="govuk-notification-banner">
            <div class="govuk-notification-banner__header">
                <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
                    Success
                </h2>
            </div>
            <div class="govuk-notification-banner__content">
                <h3 class="govuk-notification-banner__heading">
                    Data transferred to your GOV.UK One Login.
                </h3>
            </div>
        </div>
        <h1 class="govuk-heading-l">Finish setting up your account</h1>
        <p class="govuk-body">We've changed Find an apprenticeship to make it easier to use.</p>
        <p class="govuk-body">You need to confirm a few basic details before you can use the new service.</p>
        <div class="govuk-inset-text">
            Your applications and saved vacancies will be in your account after you’ve completed these steps.
        </div>
        <a asp-route="@RouteNames.ServiceStartDefault" class="govuk-button" role="button">Continue</a> 
    </div>
</div>