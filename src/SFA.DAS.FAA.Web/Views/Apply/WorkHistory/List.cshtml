@model SFA.DAS.FAA.Web.Models.Apply.AddWorkHistoryRequest
@{
    Layout = "_LayoutApprentice";
    var errorClass = Model.ErrorDictionary!.Any() ? "govuk-form-group--error" : "";
}

<a class="govuk-back-link" href="@Model.BackLinkUrl">Back</a>
@if (Model.ErrorDictionary!.Any())
{
    <div class="govuk-error-summary" aria-labelledby="error-summary-title" role="alert" tabindex="-1" data-module="govuk-error-summary">
        <h2 class="govuk-error-summary__title" id="error-summary-title">
            There is a problem
        </h2>
        <div class="govuk-error-summary__body">
            <ul class="govuk-list govuk-error-summary__list">
                @foreach (var error in Model.ErrorDictionary)
                {
                    <li>
                        <a href="#@error.Key">
                            @error.Value
                        </a>
                    </li>
                }

            </ul>
        </div>
    </div>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Work history</span>
        <h1 class="govuk-heading-l">Jobs</h1>
        <p class="govuk-body">If you’ve worked before, you can add:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>your current job</li>
            <li>previous jobs you’d like to mention</li>
        </ul>
        <p class="govuk-body">An apprenticeship can be your first job.</p>
        <div class="govuk-!-padding-bottom-5"></div>
        <form class="form" method="post">
            <div class="govuk-form-group">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h1 class="govuk-fieldset__heading">
                            Do you want to add any jobs?
                        </h1>
                    </legend>
                    @if (Model.ErrorDictionary.ContainsKey(nameof(Model.AddJob)))
                    {
                        <span id="error-message-newname" class="govuk-error-message">
                            <span class="govuk-visually-hidden">Error:</span> @Model.ErrorDictionary[nameof(Model.AddJob)]
                        </span>
                    }
                    <div class="govuk-radios" data-module="govuk-radios" @errorClass>
                        @foreach(var job in Model.Jobs)
                        {
                            <div class="govuk-radios__item">
                                <input class="govuk-radios__input" type="radio" asp-for="AddJob" value="@job" id="add-qualifications-@job" type="radio" />
                                <label class="govuk-label govuk-radios__label" for="add-qualifications-@job">
                                    @job
                                </label>
                            </div> 
                        }
                    </div>
                </fieldset>
            </div>
            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>