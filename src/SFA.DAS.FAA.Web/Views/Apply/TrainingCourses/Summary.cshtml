@model SFA.DAS.FAA.Web.Models.Apply.TrainingCoursesSummaryViewModel
@{
    ViewData["Title"] = "Training courses - Find an apprenticeship - GOV.UK";
    var errorClass = Model.ErrorDictionary!.Any() ? "govuk-form-group--error" : "";
}

@section BackLink {
    <a class="govuk-back-link" href="@Model.BackLinkUrl">Back</a>
}
<partial model="@ViewData.ModelState" name="_ValidationSummary" />
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Work history</span>
        <h1 class="govuk-heading-l">Jobs</h1>
        @foreach (var course in Model.TrainingCourses)
        {
            <div class="govuk-summary-card">
                <div class="govuk-summary-card__title-wrapper">
                    <h2 class="govuk-summary-card__title">@course.CourseName</h2>
                    <ul class="govuk-summary-card__actions">
                        <li class="govuk-summary-card__action">
                            <a class="govuk-link" href="@Model.DeleteLinkUrl">
                                Delete<span class="govuk-visually-hidden"> training course</span>
                            </a>
                        </li>
                        <li class="govuk-summary-card__action">
                            <a class="govuk-link" href="@Model.ChangeLinkUrl">
                                Change<span class="govuk-visually-hidden"> training course</span>
                            </a>
                        </li>
                    </ul>
                </div>
                <div class="govuk-summary-card__content">
                    <dl class="govuk-summary-list">
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Year
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @course.YearAchieved
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>
        }
        <a class="govuk-button govuk-button--secondary govuk-!-margin-bottom-9" href="@Model.AddAnotherTrainingCourseLinkUrl">
            Add another training course
        </a>
        <div class="govuk-!-padding-bottom-5"></div>
        <form class="form" method="post">
            <div class="govuk-form-group @(ViewData.ModelState.ErrorCount > 0 ? "govuk-form-group--error" : "")">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h1 class="govuk-fieldset__heading">
                            Have you completed this section?
                        </h1>
                    </legend>
                    <div class="govuk-radios" data-module="govuk-radios" id="IsSectionCompleted" @errorClass>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" asp-for="IsSectionCompleted" value="true" type="radio" />
                            <label class="govuk-label govuk-radios__label" for="IsSectionCompleted">
                                Yes, I've completed this section
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" asp-for="IsSectionCompleted" id="IsSectionCompleted-false" value="false" type="radio" />
                            <label class="govuk-label govuk-radios__label" for="IsSectionCompleted-false">
                                No, I'll come back to it later
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>