@using SFA.DAS.FAA.Web.Infrastructure
@model SFA.DAS.FAA.Web.Models.Apply.DeleteTrainingCourseViewModel
@{
    ViewData["Title"] = "Do you want to delete this training course? – Find an apprenticeship – GOV.UK";
}
<div class="govuk-width-container">
    @section BackLink {
        <a class="govuk-back-link" asp-route="@RouteNames.ApplyApprenticeship.TrainingCourses" asp-route-trainingCourseId="@Model.TrainingCourseId" asp-route-applicationId="@Model.ApplicationId">Back</a>
    }
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <span class="govuk-caption-l">Education history</span>
            <h1 class="govuk-heading-l">Do you want to delete this training course?</h1>

            <div class="govuk-summary-card faa-summary-card">
                <div class="govuk-summary-card__title-wrapper">
                    <h2 class="govuk-summary-card__title">@Model.CourseName</h2>
                </div>
                <div class="govuk-summary-card__content">
                    <dl class="govuk-summary-list">
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Year
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Model.YearAchieved
                            </dd>
                        </div>
                    </dl>
                </div>
            </div>

            <div class="govuk-!-padding-bottom-5"></div>

            <form class="form" method="post">
                <div class="govuk-button-group">
                    <button class="govuk-button govuk-button--warning" data-module="govuk-button">
                        Yes, delete
                    </button>
                    <a class="govuk-link" asp-route="@RouteNames.ApplyApprenticeship.TrainingCourses" asp-route-trainingCourseId="@Model.TrainingCourseId" asp-route-applicationId="@Model.ApplicationId"> Cancel – don't delete</a>
                </div>

            </form>
        </div>
    </div>
</div>