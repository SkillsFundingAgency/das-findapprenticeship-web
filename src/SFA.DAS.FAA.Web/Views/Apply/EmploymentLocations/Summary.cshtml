@using SFA.DAS.FAA.Web.Infrastructure
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model SFA.DAS.FAA.Web.Models.Apply.EmploymentLocationsSummaryViewModel
@{
    ViewData["Title"] = "Where do you want to apply for? – Find an apprenticeship – GOV.UK";
}

@section BackLink {
    <a class="govuk-back-link" href="@Url.RouteUrl(RouteNames.Apply, new { Model.ApplicationId })">Back</a>
}
<partial name="_ValidationSummary" />
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Locations</span>
        <h1 class="govuk-heading-l">Where you want to apply for</h1>
        <dl class="govuk-summary-list">
            <div class="govuk-summary-list__row">
                <dt class="govuk-summary-list__key">
                    Where do you want to apply for?
                </dt>
                <dd class="govuk-summary-list__value">
                    <ul class="govuk-list govuk-list--bullet">
                        @foreach (var address in Model.Addresses)
                        {
                            <li>@address.FullAddress</li>
                        }
                    </ul>
                </dd>
                <dd class="govuk-summary-list__actions">
                    <a class="govuk-link" href="@Url.RouteUrl(RouteNames.ApplyApprenticeship.AddEmploymentLocations, new { Model.ApplicationId, isEdit = true })">
                        Change
                        <span class="govuk-visually-hidden">locations</span>
                    </a>
                </dd>
            </div>
        </dl>
        <div class="govuk-!-padding-bottom-5"></div>
        <form class="form" method="post">
            <div class="govuk-form-group" das-highlight-error-for="IsSectionCompleted"
                 error-class="govuk-form-group--error">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        Have you completed this section?
                    </legend>
                    <span das-validation-for="IsSectionCompleted" class="govuk-error-message"></span>
                    <div class="govuk-radios" data-module="govuk-radios">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" asp-for="IsSectionCompleted" type="radio" value="true"
                                   id="IsSectionCompleted">
                            <label class="govuk-label govuk-radios__label" for="IsSectionCompleted">
                                Yes, I've completed this section
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" asp-for="IsSectionCompleted" id="IsSectionCompleted-No"
                                   type="radio" value="false">
                            <label class="govuk-label govuk-radios__label" for="IsSectionCompleted-No">
                                No, I'll come back to it later
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>