@using SFA.DAS.FAA.Web.Infrastructure
@model SFA.DAS.FAA.Web.Models.Apply.DeleteVolunteeringOrWorkExperienceViewModel

@section BackLink {
    <a class="govuk-back-link" href="@Url.RouteUrl(RouteNames.ApplyApprenticeship.VolunteeringAndWorkExperience, new { Model.ApplicationId })">Back</a>
}
<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Work history</span>
        <h1 class="govuk-heading-l">Do you want to delete this volunteering or work experience?</h1>


        <div class="govuk-summary-card">
            <div class="govuk-summary-card__title-wrapper">
                <h2 class="govuk-summary-card__title">@Model.Organisation </h2>
            </div>
            <div class="govuk-summary-card__content">
                <dl class="govuk-summary-list">
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            What you did
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.Description
                        </dd>
                    </div>
                    <div class="govuk-summary-list__row">
                        <dt class="govuk-summary-list__key">
                            Dates
                        </dt>
                        <dd class="govuk-summary-list__value">
                            @Model.Dates
                        </dd>
                    </div>
                </dl>
            </div>
        </div>

        <form class="form" method="post">
            <div class="govuk-button-group">
                <button class="govuk-button govuk-button--warning" data-module="govuk-button">
                    Yes, delete
                </button>
                <a class="govuk-link" href="@Url.RouteUrl(RouteNames.ApplyApprenticeship.VolunteeringAndWorkExperience, new { Model.ApplicationId })">Cancel – don't delete</a>
            </div>
        </form>

    </div>
</div>
