@using SFA.DAS.FAA.Web.Infrastructure
@model SFA.DAS.FAA.Web.Models.Apply.VolunteeringAndWorkExperienceViewModel
@{
    ViewData["Title"] = "Volunteering and work experience";
}

@section BackLink {
    <a class="govuk-back-link" href="@Url.RouteUrl(RouteNames.Apply, new { Model.ApplicationId })">Back</a>
}

<partial name="_ValidationSummary" />

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <span class="govuk-caption-l">Work history</span>
        <h1 class="govuk-heading-l">Volunteering and work experience</h1>
        <p class="govuk-body">You can add:</p>
        <ul class="govuk-list govuk-list--bullet">
            <li>voluntary roles</li>
            <li>work experience placements</li>
            <li>internships</li>
        </ul>
        <p class="govuk-body">Use this section to show experience you've gained outside of paid work.</p>
        <div class="govuk-!-padding-bottom-5"></div>
        <form class="form" method="post">
            <div class="govuk-form-group" das-highlight-error-for="DoYouWantToAddAnyVolunteeringOrWorkExperience" error-class="govuk-form-group--error">
                <fieldset class="govuk-fieldset">
                    <legend class="govuk-fieldset__legend govuk-fieldset__legend--m">
                        <h1 class="govuk-fieldset__heading">
                            Do you want to add any volunteering or work experience?
                        </h1>
                    </legend>
                    <span das-validation-for="DoYouWantToAddAnyVolunteeringOrWorkExperience" class="govuk-error-message"></span>
                    <div class="govuk-radios" data-module="govuk-radios" id="AddVolunteeringAndWorkExperience">
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" asp-for="DoYouWantToAddAnyVolunteeringOrWorkExperience" value="true" type="radio" />
                            <label class="govuk-label govuk-radios__label" for="DoYouWantToAddAnyVolunteeringAndWorkExperience">
                                Yes
                            </label>
                        </div>
                        <div class="govuk-radios__item">
                            <input class="govuk-radios__input" type="radio" asp-for="DoYouWantToAddAnyVolunteeringOrWorkExperience" id="DoYouWantToAddAnyVolunteeringAndWorkExperience-false" value="false" type="radio" />
                            <label class="govuk-label govuk-radios__label" for="DoYouWantToAddAnyVolunteeringAndWorkExperience-false">
                                No
                            </label>
                        </div>
                    </div>
                </fieldset>
            </div>
            <div class="govuk-button-group">
                <button class="govuk-button" type="submit" data-module="govuk-button">
                    Continue
                </button>
            </div>
        </form>
    </div>
</div>
