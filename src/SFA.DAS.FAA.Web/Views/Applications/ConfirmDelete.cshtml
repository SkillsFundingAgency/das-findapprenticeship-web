@using SFA.DAS.FAA.Domain.Extensions
@using SFA.DAS.FAA.Web.Infrastructure
@using SFA.DAS.FAA.Web.Models.Applications
@model SFA.DAS.FAA.Web.Models.Applications.ConfirmDeleteApplicationViewModel

@{
    ViewData["Title"] = "Do you want to delete this application? - Find an apprenticeship - GOV.UK";
}

@section BackLink {
    <a class="govuk-back-link" asp-route="@RouteNames.Applications.ViewApplications" asp-route-tab="@nameof(ApplicationsTab.Started)">Back</a>
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">Do you want to delete this application?</h1>
        <div class="das-highlight">
            <govuk-tag-foundation asp-show="@Model.ApprenticeshipType.IsFoundation()" class="govuk-!-margin-bottom-4"></govuk-tag-foundation>
            <h2 class="govuk-heading-m govuk-!-margin-bottom-1">@Model.VacancyTitle</h2>
            <p class="govuk-hint">@Model.EmployerName</p>
            <p class="govuk-body">@Model.WorkLocation</p>
            <p class="govuk-!-margin-bottom-0">Started on @Model.ApplicationStartDate</p>
            <p class="govuk-!-margin-bottom-0">@(Model.VacancyCloseDate)</p>
        </div>
        <p class="govuk-body">
            You’ll lose your progress on this application.
        </p>
        <form method="post" asp-route="@RouteNames.Applications.DeleteApplicationPost" asp-route-applicationId="@Model.ApplicationId">
            <div class="govuk-button-group">
                <button type="submit" class="govuk-button govuk-button--warning">Delete</button>
                <a asp-route="@RouteNames.Applications.ViewApplications" asp-route-tab="@nameof(ApplicationsTab.Started)" class="govuk-link govuk-link--no-visited-state">Cancel - don't delete</a>
            </div>
        </form>
    </div>
</div>
