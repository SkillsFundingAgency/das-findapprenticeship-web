@using SFA.DAS.FAA.Web.Infrastructure
@using SFA.DAS.FAA.Web.Models.Applications
@model SFA.DAS.FAA.Web.Models.Applications.IndexViewModel.Application
<li class="das-search-results__list-item govuk-!-margin-bottom-4">
    <partial name="_VacancyTitle" model=@ValueTuple.Create(Model.Title, Model.VacancyReference, Model.IsClosed, ApplicationsTab.Successful)/>
    <p class="govuk-hint">@Model.EmployerName</p>
    <p class="govuk-body">@Model.ResponseDate</p>
    <ul class="faa-inline-list faa-inline-list--bar govuk-!-margin-bottom-4">
        <li>
            <a class="govuk-link govuk-link--no-visited-state"
                href="@Url.RouteUrl(RouteNames.Applications.ViewApplication, new { applicationId = Model.Id })">View
                application</a>
        </li>
    </ul>
</li>